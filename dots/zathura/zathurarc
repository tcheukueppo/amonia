# Fix following links(!)
set sandbox none

# stop at page boundaries
set scroll-page-aware true
set scroll-full-overlap 0.01
set scroll-step 50
set incremental-search true
set guioptions ""

set notification-error-bg       "#fbf1c7" # bg
set notification-error-fg       "#9d0006" # bright:red
